{
  "manifest_version": 2,
  "name": "chep",
  "version": "1.0",
  "description": "ai mode for youtube, chat and summarize etc. ",
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/watch*"
      ],
      "js": [
        "settings.js",
        "ai-service.js",
        "content.js"
      ]
    }
  ],
  "permissions": [
    "*://*.youtube.com/*",
    "https://api.openai.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://openrouter.ai/*"
  ],
  "web_accessible_resources": [
    "assets/chep-logo.png"
  ]
}